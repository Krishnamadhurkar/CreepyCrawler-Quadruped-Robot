<robot name = "CreepyCrawler">
  <link name="base_link">
    <visual>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.02 0.02"/>
      </geometry>
      <material name="Grey1">
        <color rgba="0.9 0.9 0.9 1.0"/>
      </material>
    </visual>
  </link>
  
  <link name="offset_link2">
    <visual>
      <origin xyz="0.1 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.02 0.02"/>
      </geometry>
      <material name="Grey1">
        <color rgba="0.9 0.9 0.9 1.0"/>
      </material>
    </visual>
   </link>
  <link name="link2">
    <visual>
      <origin xyz="0.15 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.02 0.02"/>
      </geometry>
      <material name="Grey1">
        <color rgba="0.9 0.9 0.9 1.0"/>
      </material>
    </visual>
  </link>
  <link name="link1">
    <visual>
      <origin xyz="0.15 0 -0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.1"/>
      </geometry>
      <material name="Grey1">
        <color rgba="0.9 0.9 0.9 1.0"/>
      </material>
    </visual>
  </link>
 

  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="offset_link2"/>
    <origin xyz="0.05 0 0" rpy="0 0 0"/>
    <limit lower="-3.146" upper="3.146" effort="10" velocity="3"/>
    <axis xyz="0 0 1"/>
  </joint>
  <joint name="joint2" type="revolute">
    <parent link="offset_link2"/>
    <child link="link2"/>
    <origin xyz="0.05 0 0" rpy="0 0 0"/>
    <limit lower="-3.146" upper="3.146" effort="10" velocity="3"/>
    <axis xyz="0 1 0"/>
  </joint>
  <joint name="joint3" type="fixed">
    <parent link="link2"/>
    <child link="link1"/>
    <origin xyz="0.05 0 0" rpy="0 0 0"/>
    
  </joint>
</robot>